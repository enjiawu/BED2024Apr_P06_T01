{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "ReThink API Documentation",
    "description": "API for a comprehensive sustainability app featuring a community page, events, volunteering opportunities, a carbon footprint calculator, and insightful articles. Join us in making a positive environmental impact and fostering a greener future."
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "tags": [
    {
      "name": "Carbon Footprint Calculator",
      "description": "/carbonfootprint"
    },
    {
      "name": "Community Forum Posts",
      "description": "/communityforum/posts" 
    },
    {
      "name": "Community Forum Topics",
      "description": "/communityforum/topics"
    }
  ],
  "paths": {
    "/calculateCarbonFootprint": {
      "post": {
        "tags": ["Carbon Footprint Calculator"],
        "summary": "Calculate the carbon footprint based on the data provided",
        "description": "Calculates the carbon footprint and provides tree equivalent, grade, tips, and statistics",
        "parameters": [
          {
            "in": "body",
            "name": "data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "carTravel": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "vehicle": {"type": "string"}
                  }
                },
                "publicTransport": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "type": {"type": "string"}
                  }
                },
                "flight": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "type": {"type": "string"}
                  }
                },
                "motorBike": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "type": {"type": "string"}
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Carbon footprint calculated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "individualCF": {
                  "type": "array",
                  "items": {"type": "number"}
                },
                "totalCarbonFootprint": {"type": "number"},
                "treeEquivalent": {"type": "number"},
                "grade": {"type": "string"},
                "tips": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "stats": {
                  "type": "object",
                  "properties": {
                    "avgCarTravel": {"type": "number"},
                    "avgPublicTransport": {"type": "number"},
                    "avgFlight": {"type": "number"},
                    "avgMotorBike": {"type": "number"},
                    "avgTreeEquivalent": {"type": "number"},
                    "avgTotalCarbonFootprint": {"type": "number"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "500": {
            "description": "Error calculating carbon footprint"
          }
        }
      }
    },
    "/carbonFootprintPossibleActions": {
      "get": {
        "tags": ["Carbon Footprint Calculator"],
        "summary": "Get the possible actions to reduce the carbon footprint",
        "responses": {
          "200": {
            "description": "Possible actions retrieved successfully",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "actionId": {"type": "integer"},
                  "title": {"type": "string"},
                  "description": {"type": "string"},
                  "grade": {"type": "string"}
                }
              }
            }
          },
          "500": {
            "description": "Error retrieving possible actions"
          }
        }
      },
      "post": {
        "tags": ["Carbon Footprint Calculator"],
        "summary": "Create a new possible action to reduce the carbon footprint",
        "parameters": [
          {
            "in": "body",
            "name": "action",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "description": {"type": "string"},
                "grade": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Action created successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": {"type": "number"},
                "title": {"type": "string"},
                "description": {"type": "string"},
                "grade": {"type": "string"}
              }
            }
          },
          "400": {
            "description": "Invalid action data"
          },
          "500": {
            "description": "Error creating action"
          }
        }
      }
    },
    "/carbonFootprintPossibleActions/{id}": {
      "get": {
        "tags": ["Carbon Footprint Calculator"],
        "summary": "Get the possible action to reduce the carbon footprint by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Possible action retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "actionId": {"type": "integer"},
                "title": {"type": "string"},
                "description": {"type": "string"},
                "grade": {"type": "string"}
              }
            }
          },
          "404": {
            "description": "Action not found"
          },
          "500": {
            "description": "Error retrieving action"
          }
        }
      },
      "put": {
        "tags": ["Carbon Footprint Calculator"],
        "summary": "Update an existing possible action to reduce the carbon footprint",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "in": "body",
            "name": "action",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": {"type": "string"},
                "description": {"type": "string"},
                "grade": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Action updated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "actionId": {"type": "integer"},
                "title": {"type": "string"},
                "description": {"type": "string"},
                "grade": {"type": "string"}
              }
            }
          },
          "400": {
            "description": "Invalid action data"
          },
          "404": {
            "description": "Action not found"
          },
          "500": {
            "description": "Error updating action"
          }
        }
      }
    },
    "delete": {
      "tags": ["Carbon Footprint Calculator"],
      "summary": "Delete a possible action to reduce the carbon footprint",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "integer"
        }
      ],
      "responses": {
        "200": {
          "description": "Action deleted successfully",
          "schema": {
            "type": "object",
            "properties": {
              "message": {"type": "string"}
            }
          }
        },
        "404": {
          "description": "Action not found"
        },
        "500": {
          "description": "Error deleting action"
        }
      }
    }
  },
  "definitions": {
    "Topic": {
      "type": "object",
      "properties": {
        "topicId": {
          "type": "integer",
          "format": "int64"
        },
        "topic": {
          "type": "string"
        }
      },
      "required": ["topicId", "topic"]
    },
    "CarbonFootprint": {
      "type": "object",
      "properties": {
        "carTravel": {
          "type": "number",
          "format": "float"
        },
        "publicTransport": {
          "type": "number",
          "format": "float"
        },
        "flight": {
          "type": "number",
          "format": "float"
        },
        "motorBike": {
          "type": "number",
          "format": "float"
        },
        "treeEquivalent": {
          "type": "number",
          "format": "float"
        },
        "grade": {
          "type": "number",
          "format": "float"
        }
      },
      "required": ["carTravel", "publicTransport", "flight", "motorBike", "treeEquivalent", "grade"]
    },
    "Post": {
        "type": "object",
        "properties": {
          "postKey": {
            "type": "string",
            "example": "1234567890"
          },
          "title": {
            "type": "string",
            "example": "Delicious Pancake Recipe"
          },
          "recipeImage": {
            "type": "string",
            "format": "uri",
            "example": "http://example.com/image.jpg"
          },
          "username": {
            "type": "string",
            "example": "john_doe"
          },
          "userId": {
            "type": "integer",
            "example": 1
          },
          "profilePicture": {
            "type": "string",
            "format": "uri",
            "example": "http://example.com/profile.jpg"
          },
          "instructions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "equipment": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "likes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "comments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "commentId": {
                  "type": "integer",
                  "example": 1
                },
                "commentText": {
                  "type": "string",
                  "example": "Great recipe!"
                },
                "commenterId": {
                  "type": "integer",
                  "example": 2
                }
              }
            }
          }
        }
      }
  }
}


