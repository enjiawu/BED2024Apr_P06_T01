    "/calculateCarbonFootprint": {
      "post": {
        "tags": ["Carbon Footprint Calculator"],
        "summary": "Calculate the carbon footprint based on the data provided",
        "description": "Calculates the carbon footprint and provides tree equivalent, grade, tips, and statistics",
        "parameters": [
          {
            "in": "body",
            "name": "data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "carTravel": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "vehicle": {"type": "string"}
                  }
                },
                "publicTransport": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "type": {"type": "string"}
                  }
                },
                "flight": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "type": {"type": "string"}
                  }
                },
                "motorBike": {
                  "type": "object",
                  "properties": {
                    "distance": {"type": "number"},
                    "type": {"type": "string"}
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Carbon footprint calculated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "individualCF": {
                  "type": "array",
                  "items": {"type": "number"}
                },
                "totalCarbonFootprint": {"type": "number"},
                "treeEquivalent": {"type": "number"},
                "grade": {"type": "string"},
                "tips": {
                  "type": "array",
                  "items": {"type": "string"}
                },
                "stats": {
                  "type": "object",
                  "properties": {
                    "avgCarTravel": {"type": "number"},
                    "avgPublicTransport": {"type": "number"},
                    "avgFlight": {"type": "number"},
                    "avgMotorBike": {"type": "number"},
                    "avgTreeEquivalent": {"type": "number"},
                    "avgTotalCarbonFootprint": {"type": "number"}
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input data"
          },
          "500": {
            "description": "Error calculating carbon footprint"
          }
        }
      }
    },
